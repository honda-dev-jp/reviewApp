# ----------------------------------------------------------------------
# 画像への直接アクセス・直リンクを制限
# ----------------------------------------------------------------------

# 1. ディレクトリ一覧を非表示
Options -Indexes

# 2. 直リンク禁止（icon・thumbnail のみ対象）
<IfModule mod_rewrite.c>
    RewriteEngine On

    # no_image は制限しない
    RewriteRule ^no_image/ - [L]

    # 自サイトからのリファラなら許可
    RewriteCond %{HTTP_REFERER} ^https://portfolio\.honda-dev\.com [NC]
    RewriteRule ^ - [L]

    # それ以外の画像アクセスは403
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC]
</IfModule>